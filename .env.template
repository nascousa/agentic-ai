# AM (AgentManager) MCP Server Configuration
# Copy this file to .env and configure your actual values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./agent_manager.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/agent_manager_db

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_API_TOKEN=your_secure_api_token_here

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=development

# Client Configuration Defaults
DEFAULT_POLL_INTERVAL=5
DEFAULT_MAX_RETRIES=3
DEFAULT_TIMEOUT=30

# LLM Configuration
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT_SEC=60
LLM_MAX_RETRIES=3

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ENABLE_DOCS=true
ENABLE_METRICS=false

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_CRITERIA=["completeness", "accuracy", "clarity", "consistency"]
AUDIT_CONFIDENCE_THRESHOLD=0.8

# Worker Agent Configuration
MAX_RA_ITERATIONS=10
WORKER_TIMEOUT_SEC=300
ENABLE_ACTION_SIMULATION=true