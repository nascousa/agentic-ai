# =============================================================================
# AM (AgentManager) MCP Server Environment Configuration
# =============================================================================

# Database Configuration
# Use SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite+aiosqlite:///./agent_manager.db
# Production PostgreSQL example:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/agent_manager

# API Security Configuration
# Generate secure tokens for production deployment
SERVER_API_TOKEN=your_server_api_token_here
SECRET_KEY=your_secret_key_here

# LLM Configuration
# OpenAI API configuration for agent operations
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.5

# Redis Cache Configuration
# Redis connection and caching settings
REDIS_URL=redis://localhost:6380
REDIS_TTL_READY_TASKS=300
REDIS_TTL_WORKFLOW_STATUS=600
REDIS_TTL_TASK_RESULTS=3600

# Server Configuration
# FastAPI server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=info

# External Client Configuration
# Default settings for client coordination
DEFAULT_POLLING_INTERVAL=5
MAX_CONCURRENT_CLIENTS=10
TASK_TIMEOUT_SECONDS=300

# Development Settings
# Enable development features
ENABLE_DOCS=true
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]