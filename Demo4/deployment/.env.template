# =============================================================================
# AgentManager Deployment - Environment Configuration
# =============================================================================

# Copy this file to .env and fill in your actual values
# Never commit .env files with real secrets to version control

# =============================================================================
# Server Configuration
# =============================================================================
AM_SERVER_URL=http://localhost:8000
SERVER_PORT=8000
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# Security & Authentication
# =============================================================================
# Generate secure tokens using: python -c "import secrets; print(secrets.token_urlsafe(32))"
AM_AUTH_TOKEN=your_secure_server_api_token_here
SECRET_KEY=your_secure_secret_key_here

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=agentmanager
POSTGRES_USER=am_user
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_PORT=5432

# =============================================================================
# LLM Configuration
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# Worker Configuration
# =============================================================================
POLLING_INTERVAL=5
MAX_PARALLEL_TASKS=2
TASK_TIMEOUT=300
MAX_RETRIES=3
RETRY_DELAY=2

# =============================================================================
# Monitoring & Metrics
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=8080
HEALTH_PORT=8080

# =============================================================================
# Resource Limits
# =============================================================================
MAX_MEMORY=512
MAX_CPU=80
MAX_DISK=1024

# =============================================================================
# Nginx Configuration (if using proxy)
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# Development Settings
# =============================================================================
# Set to true only in development environments
ENABLE_DOCS=true
ENABLE_CORS=true